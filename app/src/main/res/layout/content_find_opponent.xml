<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.marzipan.myfirstapp.FindOpponentActivity"
    tools:showIn="@layout/activity_find_opponent"
    android:id="@+id/find_ops_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText android:id="@+id/TEXT_wifi_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="WiFi Enabled"
            android:editable="false"/>

        <Button android:id="@+id/BUTTON_toggle_wifi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Disable WiFi"
            android:layout_weight="1"
            android:onClick="toggle_wifi" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText android:id="@+id/TEXT_p2p_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="P2P Enabled"
            android:editable="false"/>

        <Button android:id="@+id/BUTTON_request_peers"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Scan For Peers"
            android:onClick="request_peers" />

    </LinearLayout>


</LinearLayout>
